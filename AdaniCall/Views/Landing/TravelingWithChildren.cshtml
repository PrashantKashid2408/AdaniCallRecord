
@{
    ViewBag.Title = "Traveling With Children";
    Layout = "~/Views/Shared/_LayoutLandings.cshtml";
}

<div class="paginate-container">
    <!-- Rounded Bubble with title Left Section-->
    <div class="paginate-container-imgTitlesec-fl">
        <div class="paginate-container-imgTitlesec">
            <div class="bubbleImg-sec">
                <div class="bubble-rounded bubble-rounded-bgFive"> <img src="~/images/icons/children-icon.svg" alt="Traveling With Children"> </div>
            </div>
            <div class="bubbleTitle">
                <h2>Traveling With Children</h2>
                <!--<p>Your Para goes here.</p>-->
            </div>
            <div class="clearfix"></div>

            <div class="cust-back-btn">
                <a href="/Landing/index"><img src="~/images/icon-back-button.svg" alt="Back Button Icon"></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
    <!-- END Rounded Bubble with title Left Section -->
    <!-- Accordian Details Right section -->
    <div class="paginate-container-accordian-fl">
        <div class="paginate">
            <div class="items">
                <div id="sec_1" class="sec_content_holder">
                    <button class="accordion active"><img src="~/images/icons/icon-accordion-plus.svg" alt="icon" class="plus"> <img src="~/images/icons/icon-accordion-minus.svg" alt="icon" class="minus"> Where are the baby care facility available at the airport?</button>
                    <div class="panel" style="display: block;">
                        <p class="pmbot">Currently, the baby care room is available only at the first level of T1 and T2.</p>
                    </div>
                </div>
                <div id="sec_2" class="sec_content_holder">
                    <button class="accordion"><img src="~/images/icons/icon-accordion-plus.svg" alt="icon" class="plus"> <img src="~/images/icons/icon-accordion-minus.svg" alt="icon" class="minus"> How old must a child be to travel alone?</button>
                    <div class="panel">
                        <p class="pmbot">The minimum age for children traveling alone varies between 5 and 16, depending on the airline. Please get in touch with the airline for more information.</p>
                    </div>
                </div>
                <div id="sec_3" class="sec_content_holder">
                    <button class="accordion"><img src="~/images/icons/icon-accordion-plus.svg" alt="icon" class="plus"> <img src="~/images/icons/icon-accordion-minus.svg" alt="icon" class="minus"> Can I take food and drinks for my child on board the aircraft?</button>
                    <div class="panel">
                        <p>You can take medicines and special food, such as baby food, which you will need during the flight, in your hand luggage.</p>
                        <p class="pmbot">You may have to provide accompanying documentation.</p>
                    </div>
                </div>
            </div>
            <div class="pager">
                <!--<div class="firstPage">&laquo;</div>
                          <div class="previousPage">&lsaquo;</div>-->
                <div class="pageNumbers mtop40"></div>
                <!--<div class="nextPage">&rsaquo;</div>
                          <div class="lastPage">&raquo;</div>-->
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <!-- END Accordian Details Right section -->
</div>

