@using AdaniCall.Entity.Enums;
@using AdaniCall.Entity;
@using AdaniCall.Resources;
@using AdaniCall.Utility.Common;
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @RenderSection("head", required: false)
    <meta charset="utf-8">

    <!-- for Internet IE Explore new elements are render like HTML 5. -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="YES" name="apple-touch-fullscreen">

    <!-- for apple mobile capable -->
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="yes" name="mobile-web-app-capable">
    <meta content="yes" name="apple-touch-fullscreen">

    <title>adani</title>
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link href="~/css/style_landing.css?v=3" rel="stylesheet" />
    <script src="~/js/jquery-3.6.1.min.js"></script>
    <script src="~/js/paginga.jquery.min.js"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@

    <link href="~/Content/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap-dialog/bootstrap-dialog.min.css" rel="stylesheet" />
    <style>
        #divConversationCall .modal-header .bootstrap-dialog-title {
            font-size: 30px;
        }

        #divConversationCall .modal-body .bootstrap-dialog-message {
            font-size: 30px;
            text-align: center;
        }

        #divConversationCall .modal-footer {
            display: flex !important;
            justify-content: center !important;
        }

            #divConversationCall .modal-footer .btn {
                width: auto;
                font-size: 25px;
                margin: 0px;
            }

                #divConversationCall .modal-footer .btn.btn-danger {
                    margin-right: 10px;
                }

                #divConversationCall .modal-footer .btn.btn-success {
                    margin-left: 10px;
                }
    </style>

    @{
        var _id = (HttpContextAccessor.HttpContext.Session.GetString(KeyEnums.SessionKeys.UserId.ToString()) != null ? Convert.ToString(HttpContextAccessor.HttpContext.Session.GetString(KeyEnums.SessionKeys.UserId.ToString())) : ""); if (_id == "") { HttpContextAccessor.HttpContext.Response.Redirect("/User/Login"); }
        }
</head>
<body>
    <!-- Logo WIth Title -->
    <div class="cust-header">
       
        <div class="cust-header-title">
            <h1 class="titleH1">How may we help you?</h1>
        </div>
    </div>
    <!-- END Logo WIth Title -->
    <div class="clearfix"></div>

    <!-- Body -->
    @RenderBody()
    <!-- End Body -->

    @if (ViewContext.RouteData.Values["action"].ToString().ToLower() != "index")
    {
        <!-- Talk to Us Icon -->
        <div class="bubble-talkTous-sec">
            <a href="/Home/Call">
                <div class="bubble-talkTOus"><img src="~/images/icons/talk-to-us-icon.svg" alt=""><br>Talk to Us </div>
            </a>
        </div>
        <!-- Talk to Us Icon -->
    }


    <div class="clearfix"></div>
  
    <div class="cust-footer custBGcolor" style="padding: 0px;">
        <div class="cust-footer-container">
            <div class="cust-footer-container-inner">
                <div class="fr">
                    <div class="cust-footer-gophygital-logo" style="padding-top: 4; padding-bottom: 4px;"> <button class="links footerLink" style="border: 0px; background: none; color: #007bff !important; outline:0px;" onclick="tnc();">Terms And Conditions</button> </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <!-- End Footer -->

    <script src="~/js/custom-landingpages.js?v=3"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/plugins/bs4/bootstrap-dialog.js"></script>
    <script src="~/Scripts/plugins/bs4/bootstrap-dialog-custom-bs4.js"></script>
    <script src="~/Scripts/dist/js/demo.js"></script>

    <script src="~/Scripts/Common/common.js?v=1"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setInterval(function () {
                InsertAccessMemberPing("LandPing");
            }, 300000);//1800000 - 30mins//600000 - 10mins//900000 - 15mins//300000 - 5mins
        });

    </script>
</body>
</html>
