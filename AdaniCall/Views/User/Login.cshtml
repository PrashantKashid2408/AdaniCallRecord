@using AdaniCall.Resources;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <!-- for Internet IE Explore new elements are render like HTML 5. -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="YES" name="apple-touch-fullscreen">

    <!-- for apple mobile capable -->
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="yes" name="mobile-web-app-capable">
    <meta content="yes" name="apple-touch-fullscreen">

    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <title>Login - Adani Airports</title>
    <link rel="shortcut icon" href="~/images/favicon.ico" />
    <link href="~/Content/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet">
    <link href="~/Content/dist/css/adminlte.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-2.1.3.js" type="text/javascript"></script>
    <script src="~/Scripts/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/plugins/bootstrap-dialog/bootstrap-dialog.min.js"></script>
    <script src="~/Scripts/plugins/bootstrap-dialog/bootstrap-dialog-custom.js"></script>
    <script src="~/Scripts/dist/js/adminlte.min.js"></script>
    <script src="~/Scripts/Common/common.js?v=1"></script>
    <script src="~/Scripts/Common/global.js"></script>
    <script src="~/Scripts/Common/validation.js"></script>
    <script src="~/Scripts/user/login.js"></script>
    <script type="text/javascript">
        var newmessage = '@TempData[AdaniCall.Entity.Enums.KeyEnums.TempDataKeys.MessageToClient.ToString()]';
        if (newmessage != '') {
            var html = $("#scriptAlert").text();
            if (hasIcon)
                html = html.replace("<!--", "").replace("-->", "").replace("[[ICON]]", i);
            html = html.replace("[[CLASS]]", c).replace("[[MESSAGE]]", message);
        }

        $(document).ready(function () {
            setInterval(function () {
                InsertAccessMemberPing("LoginPing");
            }, 300000);//1800000 - 30mins//600000 - 10mins//900000 - 15mins//300000 - 5mins
        });

    </script>
</head>
<body class="hold-transition login-page">
    <div id="divLoginMsg" class="login-box box">
        <div class="login-logo">
            @*<img src="~/images/logos/adani_airport_logo.png" alt="Logo" class="login-logo-cust">*@
            @*<span class="login-logo-txt">Adani</span>*@
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form action="/User/Login" method="post">
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" data-val="true" data-val-required="The Email field is required." id="txtUserName" name="txtUserName" placeholder="@Resource.lbl_emailAddress">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input class="form-control" data-val="true" data-val-required="The Password field is required." id="txtPassword" name="txtPassword" maxlength="30" placeholder="@Resource.lbl_password" type="password" onkeydown="CallEnter(event, 'btnSubmit')">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                 
                        <div class="col-4">
                            <button type="button" onclick="SubmitLogin()" class="btn btn-primary btn-block" onkeydown="CallEnter(event, 'btnSubmit')" id="btnSubmit" name="btnSubmit" value="login">@Resource.lbl_log @Resource.lbl_in.ToLower()</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
        </div>
        <!-- /.login-box -->
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <script id="scriptLoader" type="application/htmlMessage">
        <div class="overlay"></div>
        <div class="loading-img"></div>
    </script>
    <script id="scriptLoaderSmall" type="application/htmlMessage">
        <div class="overlay"></div>
        <div class="loading-img-small"></div>
    </script>
    <script id="scriptAlert" type="application/htmlMessage">
        <div class="alert alert-[[CLASS]] alert-dismissable" style="margin-left: 0px;">
            <!--<i class="fa fa-[[ICON]]"></i>-->
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            [[MESSAGE]]
        </div>
    </script>
</body>
</html>
